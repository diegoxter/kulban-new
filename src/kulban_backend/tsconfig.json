{
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "noEmit": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*", "app.d.ts", "global.d.ts"]
}
