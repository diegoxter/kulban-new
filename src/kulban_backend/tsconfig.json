{
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2024",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "bundler",
        "allowJs": true,
        "noEmit": true,
        "experimentalDecorators": true
    }
}
